@* @using Volo.Abp.AspNetCore.Components.Web.LeptonXLiteTheme.Themes.LeptonXLite *@
@using OOS.OgrenciOtomasyonSistemi.Blazor.Shared
@using Volo.Abp.AspNetCore.Components.Web.Theming.Routing
@using Microsoft.Extensions.Options
@inject IOptions<AbpRouterOptions> RouterOptions


@inject IOptions<AbpRouterOptions> RouterOptions
@inject IStringLocalizer<OgrenciOtomasyonSistemiResource> L
@inject NavigationManager NavigationManager

<CircleLoading1 Caption="@L["PleaseWait"]" Text="@L["Loading"]">
    <CascadingAuthenticationState>
        <Router AppAssembly="typeof(Program).Assembly" AdditionalAssemblies="RouterOptions.Value.AdditionalAssemblies">
            <Found Context="routeData">
          
                <AuthorizeRouteView RouteData="@routeData" DefaultLayout="typeof(MainLayout)">
                    <NotAuthorized>
                     @*    <RedirectToLogin /> *@
                        @if (!context.User.Identity.IsAuthenticated)
                        {
                            NavigationManager.NavigateTo($"account/login?returnUrl={Uri.EscapeDataString(NavigationManager.Uri)}", true);
                        }
                        else
                        {
                            <p>@L["NotAuthorized"]</p>
                        }
                    </NotAuthorized>
                </AuthorizeRouteView>
            </Found>
            <NotFound>
                <LayoutView Layout="@typeof(MainLayout)">
                    <p>@L["NothingAddress"]</p>
                </LayoutView>
            </NotFound>
        </Router>
    </CascadingAuthenticationState>
</CircleLoading1>
