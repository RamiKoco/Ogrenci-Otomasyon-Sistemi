@inject ICurrentUser CurrentUser
@inject ICurrentTenant CurrentTenant
@inject IStringLocalizer<OgrenciOtomasyonSistemiResource> L

<AuthorizeView>
    <Authorized>
        <DxMenuItem CssClass="@CssClass" Text="@(CurrentTenant.Name == null ? CurrentUser.UserName :
                            @$"{CurrentTenant.Name}\{CurrentUser.UserName}")"
                    IconCssClass="fas fa-user"
                    BeginGroup="true"
                    Position="ItemPosition.End">
            <Items>
                <DxMenuItem CssClass="@CssClass"
                            Text="@L["ManageProfile"]"
                            NavigateUrl="Account/Manage"
                            IconCssClass="far fa-address-card" />

                <DxMenuItem CssClass="@CssClass"
                            Text="@L["Logout"]"
                            NavigateUrl="Account/Logout"
                            IconCssClass="fas fa-sign-out-alt" />
            </Items>
        </DxMenuItem>
    </Authorized>
  
    <NotAuthorized> 
        <DxMenuItem CssClass="@CssClass"
                    Text="@L["Login"]"
                    NavigateUrl="Account/Login"
                    IconCssClass="fas fa-user"
                    BeginGroup="true"
                    Position="ItemPosition.End" />
    </NotAuthorized>
</AuthorizeView>
@code {
    [Parameter] public string CssClass { get; set; } = "cssClass";
    [Parameter] public string CssClass1 { get; set; } = "cssClass1";
    [Parameter] public string IconCssClass { get; set; } = "iconCssClass";
}
<style>
    .cssClass {
        background-color: #000000;
        color: white;
