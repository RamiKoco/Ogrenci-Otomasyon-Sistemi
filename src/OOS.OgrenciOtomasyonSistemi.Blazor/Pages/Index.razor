 @page "/"
@using Volo.Abp.MultiTenancy
@inherits OgrenciOtomasyonSistemiComponentBase
@inject AuthenticationStateProvider AuthenticationStateProvider
<AuthorizeView>
    <Authorized>    
        <h3 class="pt-4 pb-4 headerCssClass">@L["Giriþ Yapýldý"]</h3>
        <DevGridLayout ColumnCount="5"  
                       ColumnWidths="@ColumnWidths("*","5px","*","5px","*")"
                       RowCount="5"
                       RowHeights="@RowHeights("*","10px","*")">
            <GridLayoutItems />
        </DevGridLayout>
    </Authorized>    
    <NotAuthorized>
           <div class="captionCssClass">     
        <div class="text">
            <a class="btn btn-success" href="/account/login">
                <i class="fa fa-sign-in-alt pr-2"></i> @L["Login"]
            </a>
        </div>
        <div class="card-body captionCssClass">

            <div class="row text-center justify-content-md-center">
                <div class="col-lg-4">
                    <div class="p-4" style="color:white;">
                        <p>
                            <h5 class="mb-3"><i class="fa fa-clone text-success d-block my-3 fa-2x"></i>@L["Cards"]</h5>
                            @L["IndexPage_4"]
                        </p>
                        <a href="#" class="btn btn-link px-1">@L["MoreInformation"] <i class="fas fa-chevron-right"></i></a>
                    </div>
                </div>
                <div class="col-lg-4 border-left">
                    <div class="p-4" style="color:white;">
                        <h5 class="mb-3"><i class="fas fa-file-invoice text-warning d-block my-3 fa-2x"></i> @L["Invoices"]</h5>
                        <p>@L["IndexPage_5"]</p>
                        <a href="#" class="btn btn-link px-1">@L["MoreInformation"] <i class="fas fa-chevron-right"></i></a>
                    </div>
                </div>
                <div class="col-lg-4 border-left">
                    <div class="p-4" style="color:white;">
                        <h5 class="mb-3"><i class="fas fa-receipt text-danger d-block my-3 fa-2x"></i> @L["Receipts"]</h5>
                        <p>@L["IndexPage_6"]</p>                   
                        <a href="#" class="btn btn-link px-1">@L["MoreInformation"] <i class="fas fa-chevron-right"></i></a>
                    </div>
                </div>
            </div>

            <div class="row text-center mt-lg-3 justify-content-md-center">

                <div class="col-lg-4">
                    <div class="p-4" style="color:white;">
                        <h5 class="mb-3"><i class="fa fa-money-check text-warning d-block my-3 fa-2x"></i>@L["PaymentTypes"]</h5>
                        <p>@L["IndexPage_7"]</p>
                        <a href="#" class="btn btn-link px-1">@L["MoreInformation"] <i class="fas fa-chevron-right"></i></a>
                    </div>
                </div>

                <div class="col-lg-4 border-left">
                    <div class="p-4" style="color:white;">
                        <h5 class="mb-3"><i class="fas fa-poll text-info d-block my-3 fa-2x"></i>@L["Reports"]</h5>
                        <p>@L["IndexPage_8"]</p>
                        <a href="#" class="btn btn-link px-1">@L["MoreInformation"] <i class="fas fa-chevron-right"></i></a>
                    </div>
                </div>

                <div class="col-lg-4 border-left">
                    <div class="p-4" style="color:white;">
                        <h5 class="mb-3"><i class="fas fa-wrench text-truncate d-block my-3 fa-2x"></i>@L["Authorization"]</h5>
                        <p>@L["IndexPage_9"]</p>
                        <a href="#" class="btn btn-link px-1">@L["MoreInformation"] <i class="fas fa-chevron-right"></i></a>
                    </div>
                </div>
            </div>
        </div>  
        </div>
      </NotAuthorized>
      
</AuthorizeView>