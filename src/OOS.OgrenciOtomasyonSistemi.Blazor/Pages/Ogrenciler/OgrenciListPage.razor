@page "/studentcards"
@attribute [Authorize(OgrenciOtomasyonSistemiPermissions.Ogrenci.Default)]
@inherits BaseListPage<SelectOgrenciDto, ListOgrenciDto, OgrenciListParameterDto,
                       CreateOgrenciDto, UpdateOgrenciDto, CodeParameterDto>

@inject OgrenciAppService CrudService
@inject OgrenciService Service

<DevListPageLayout DataGridService="Service" 
                   ListPageService="Service"
                   Caption="@L["StudentCards"]"
                   RowHeights="@RowHeights("*")">
    <ListPageContext>
        <DevDataGrid DataGridService="Service"
                     DoubleClick="async ()=> await BeforeUpdateAsync()">
            <HeaderTemplate >
                <DevListPageToolbar CommonService="Service" 
                                    DataGridService="Service"
                                    ListPageService="Service"
                                    DeleteButtonClick="async ()=> await DeleteAsync()"
                                    DeleteButtonEnabled="Service.ListDataSource.Count > 0"
                                    DeleteButtonVisible="true"
                                    FilterButtonVisible="true"
                                    GetListDataSource="async ()=> await GetListDataSourceAsync()"
                                    GroupButtonVisible="true"
                                    L="L" 
                                    NewButtonClick="async ()=> await BeforeInsertAsync()"
                                    NewButtonVisible="true"
                                    UpdateButtonClick="async ()=> await BeforeUpdateAsync()"
                                    UpdateButtonEnabled="Service.ListDataSource.Count > 0"
                                    UpdateButtonVisible="true">
                </DevListPageToolbar>
            </HeaderTemplate>

            <Columns >
                <DxDataGridColumn Caption="@L["Code"]" 
                                  Field="@nameof(ListOgrenciDto.Kod)"
                                  Width="150px" />

                <DxDataGridColumn Caption="@L["Name"]"
                                  Field="@nameof(ListOgrenciDto.Ad)"
                                  Width="140px" />
                <DxDataGridColumn Caption="@L["Surname"]"
                                  Field="@nameof(ListOgrenciDto.Soyad)"
                                  Width="140px" />

             
                <DxDataGridColumn Caption="@L["Telephone"]"
                                  Field="@nameof(ListOgrenciDto.Telefon)"
                                  Width="150px"/>

                <DxDataGridColumn Caption="@L["Email"]"
                                  Field="@nameof(ListOgrenciDto.Email)"
                                  Width="150px" />
                
                <DxDataGridColumn Caption="@L["Description"]"
                                  Field="@nameof(ListOgrenciDto.Aciklama)"
                                  Width="160px" />
            </Columns>
        </DevDataGrid>        
    </ListPageContext>

    <EditPageContent>
        <OgrenciEditPage OnSubmit="OnSubmit" />
    </EditPageContent>

</DevListPageLayout>

@code {    
    protected override void OnInitialized()
    {
        BaseCrudService = CrudService;
        BaseService = Service;

        DefaultPolicy = OgrenciOtomasyonSistemiPermissions.Ogrenci.Default;
        CreatePolicy = OgrenciOtomasyonSistemiPermissions.Ogrenci.Create;
        UpdatePolicy = OgrenciOtomasyonSistemiPermissions.Ogrenci.Update;
        DeletePolicy = OgrenciOtomasyonSistemiPermissions.Ogrenci.Delete;
    }
}