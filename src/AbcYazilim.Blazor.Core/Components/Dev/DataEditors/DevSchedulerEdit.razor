@inherits DevBaseEditor

<DxGridLayoutItem Column="ColumnIndex"
                  ColumnSpan="ColumnSpan"
                  CssClass="@LayoutItemCssClass"
                  Row="RowIndex"
                  RowSpan="RowSpan"
                  Visible="Visible">
    <Template>
    @*     <DxScheduler @ref="_dxScheduler"
                     @bind-Text="@Value"
                     ActiveViewType="ActiveViewType"
                     WorkDays="WorkDays"
                     FirstDayOfWeek="FirstDayOfWeek"
                     @bind-DataStorage="DataStorage"
                     CssClass="@CssClass"
                     StartDate="StartDate"
                     ResourceNavigatorVisible="ResourceNavigatorVisible"
                     InnerComponentSizeMode="InnerComponentSizeMode"
                     ResourceColorInHeaderVisible="ResourceColorInHeaderVisible"
                     ShowAppointmentTooltip="ShowAppointmentTooltip"
                     ValidateEditForm="ValidateEditForm"
                     GroupType="GroupType">

        </DxScheduler> *@
    </Template>
</DxGridLayoutItem>

@code {
    private DxScheduler _dxScheduler;
    private string _value;
    [Parameter] public EventCallback<string> ValueChanged { get; set; }

    [Parameter]
    public string Value
    {
        get => _value;
        set
        {
            if (_value == value) return;
            _value = value;
            ValueChanged.InvokeAsync(value);
        }
    }


    DxSchedulerDataStorage DataStorage = new DxSchedulerDataStorage();

    [Parameter] public SchedulerViewType ActiveViewType { get; set; } = SchedulerViewType.WorkWeek;
    [Parameter] public SchedulerWeekDays WorkDays { get; set; } = SchedulerWeekDays.EveryDay;
    [Parameter] public DayOfWeek FirstDayOfWeek { get; set; } = DayOfWeek.Monday; //Default value
    [Parameter] public SchedulerGroupType GroupType { get; set; } = SchedulerGroupType.None;
    [Parameter] public DateTime StartDate { get; set; } = DateTime.Today;
    [Parameter] public bool ResourceNavigatorVisible { get; set; } = false;
    [Parameter] public bool ResourceColorInHeaderVisible { get; set; } = true;
    [Parameter] public bool ShowAppointmentTooltip { get; set; } = true;
    [Parameter] public bool ValidateEditForm { get; set; } = true;
    [Parameter] public SizeMode? InnerComponentSizeMode { get; set; } = SizeMode.Large;
    [Parameter] public string CssClass { get; set; } = "bg-primary text-white";

}
